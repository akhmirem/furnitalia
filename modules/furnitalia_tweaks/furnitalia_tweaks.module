	}
	
	dsm($favorites);
	
	$nodes = node_load_multiple($nids);    
    $build = furnitalia_tweaks_prepare_node_attributes($nodes);
    
    unset($build['options']);

	
	//print flag_create_link('favorites', $node->nid); 
	
	return $build;
}

